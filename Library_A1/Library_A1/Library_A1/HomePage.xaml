<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library_A1.HomePage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" >
            <Label Text="Welcome to The Library!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <SearchBar Placeholder="Enter here Please"/>
            <StackLayout Grid.Column="2">
                <Button Text="Search"/>
                <Button Text="Advanced Search" Clicked="Advanced_Search_Clicked"/>
            </StackLayout>
            <Button Text="Buy Or Sell" Clicked="Buy_Sell_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>