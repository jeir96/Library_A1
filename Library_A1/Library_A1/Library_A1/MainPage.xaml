<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Library_A1"
             xmlns:controls="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms"
             x:Class="Library_A1.MainPage">
    <ContentPage.Content>
        
        <StackLayout VerticalOptions="Center" Margin="30,0">
            
            <Label Text="Welcome To The Library" VerticalOptions="Center" HorizontalOptions="Center" TextColor="Aqua" Margin="0,0,0,20" Font="25"/>
            <Entry x:Name="username_login" Placeholder="username" Keyboard="Email"/>
            
            <Entry x:Name="password_login" Placeholder="password" IsPassword="True"/>
            <Button x:Name="LogIn" Text="LogIn" Clicked="LogIn_Clicked" BackgroundColor="Cyan"  Margin="0,20,0,20"/>
            
            <Label Text="If You dont Have Any Acount You Can SignUp Here" HorizontalOptions="Center" TextColor="Aqua" Margin="0,20,0,0"/>
            <Button x:Name="SignUp" Text="SignUp" Clicked="SignUp_Clicked" BackgroundColor="Cyan"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>